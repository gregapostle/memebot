NETWORK=solana

# Signal sources
ENABLE_MOCK=1          # 1 = enable mock signals, 0 = disable
ENABLE_HELIUS=0        # 1 = enable Helius webhook ingestion, 0 = disable

# Risk & sizing
TP_PCT=20              # take-profit %
SL_PCT=-30             # stop-loss %
TRAIL_PCT=10           # trailing stop %
MIN_HOLD_SEC=10        # minimum hold time before exits allowed
DAILY_LOSS_CAP_SOL=1.0 # max SOL loss per day before shutdown
BASE_SIZE_SOL=0.05     # base entry size in SOL
SIZE_BY_CONF=0.7:1.0,0.8:1.5,0.9:2.0
CALLER_ALLOWLIST=alpha:2.0,beta:1.0

# Solana
JUPITER_BASE=https://quote-api.jup.ag
WSOL_MINT=So11111111111111111111111111111111111111112

# Webhooks
HELIUS_WEBHOOK_SECRET= # set this to your Helius webhook signing secret

# Twitter integration (snscrape-based)
TWITTER_POLL_INTERVAL=60       # seconds between polls
TWITTER_TRACK_USERS=alpha,beta # comma-separated twitter handles to track
TWITTER_TRACK_KEYWORDS=CA:     # keywords to look for in tweets

# Telegram integration
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_SESSION=memebot
TELEGRAM_CHANNELS=alpha_channel,beta_channel
TELEGRAM_TRACK_KEYWORDS=CA:

# Discord integration
DISCORD_TOKEN=
DISCORD_CHANNELS=123456789012345678,987654321098765432
DISCORD_TRACK_KEYWORDS=CA:

# Social ingestion toggles
ENABLE_TWITTER=0
ENABLE_TELEGRAM=0
ENABLE_DISCORD=0

# Fusion engine
FUSION_DECAY_SECONDS=120   # how long signals remain strong
FUSION_PLATFORM_BOOST=1.2  # multiplier for cross-platform overlap
SOCIAL_SOURCE_WEIGHTS=twitter:1.0,telegram:1.2,discord:0.8

